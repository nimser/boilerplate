---
import "../styles/global.css"
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
  <head>
    <meta name="view-transition" content="same-origin" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Literata:ital,opsz,wght@0,7..72,400..700;1,7..72,400..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar />
    <main><slot /></main>
    <Footer />
  </body>
</html>

<style is:global>

@reference "tailwindcss";
:root {
  --header-height: 5rem;
  --max-page-width: 1200px;
  --responsive-menu-width: calc(14ch + 4vw);
  --navbar-font-size: 1.5rem;
  --footer-height: 5rem;
  --footer-font-size: .8rem;
}

body {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

main {
  padding-inline: max(1rem, calc((100vw - var(--max-page-width))/2));
  padding-block: 2rem;
}

h1 {
  font-size: 1.5rem;
  font-weight: bold;
}

header, footer {
  display: flex;
  align-items: center;
  padding-inline: max(1rem, calc((100vw - var(--max-page-width))/2));
  background-image: radial-gradient(#ddd 3px, transparent 1px);
  background-size: 8px 8px;
}

header {
  container-type: inline-size;
  font-size: var(--navbar-font-size);
  height: var(--header-height);
  justify-content: space-between;
  .menu-trigger {
    width: 2rem;
    height: 2rem;
    cursor: pointer;
  }

  nav {
    width: min(var(--responsive-menu-width), 100vw);
    margin-left: auto;
    position: absolute;
    right:0;
    top: var(--header-height);
    background-image: repeating-linear-gradient(45deg, #bbb, #bbb 1px, transparent 1px, transparent 6px);
    border: 1px solid #bbb;

    a {  
      margin-inline: 2ch;
      display: block;
    }

    a:hover {
      text-decoration: underline;
      color: #666;
    }
  }

  @container (width > 800px) {
    display: flex;
    .menu-trigger { display: none; }

    nav {
      position: static;
      width: inherit;
      display: flex;
      margin-left: 0;

      a { display: inline; }
    }
  }
}

footer {
  margin-block-start: auto;
  height: var(--footer-height);
  justify-content: center;
  font-size: var(--footer-font-size);
}
</style>
